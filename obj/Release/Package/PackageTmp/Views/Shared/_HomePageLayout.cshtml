<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Politico - @ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    <link href="@Url.Content("~/Content/Application/home-css.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Application/animate.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Application/liquid-slider.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/Application/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Application/highlight.pack.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Application/jquery.cookie.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Application/jquery.accordion.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Application/jquery.easing.1.3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Application/jquery.liquid-slider-custom.min.js")" type="text/javascript"></script>

    @*    <script src="@Url.Content("~/Scripts/Application/jquery.base64.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Application/jquery.base64.min.js")" type="text/javascript"></script>*@

    <script type="text/javascript">
        function Logout() {
            $.ajax({
                url: '/Home/Logout',
                type: 'POST',
                dataType: 'json',
                data: '',
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data.RedirectUrl) {
                        window.location = data.RedirectUrl;
                    }
                }
            });
        }
    </script>

</head>
<body>
    <header>
        <div class="header">
            <div class="header_main">
                <a href="#" class="logo">
                    <img src="/images/Application/logo.png" width="373" height="105" alt="" /></a>
                <div class="header_right">
                    <div class="menu_nav">
                        <div class="user_img">
                            <img src='@ViewBag.Picture' alt="" />
                        </div>
                        <div class="list_menu">
                            <ul>
                                <li><span>Welcome </span><b>@ViewBag.Name</b></li>
                                <li><a onclick="Logout()" class="last">Logout</a></li>
                            </ul>
                        </div>

                    </div>
                    <div class="searchform">
                        <form id="formsearch" name="formsearch" method="post" action="#">
                            <span>
                                <input name="editbox_search" class="editbox_search" id="editbox_search" maxlength="80" placeholder="Search" type="text" />
                            </span>
                            <input name="button_search" src="/images/Application/search_btn.gif" class="button_search" type="image" />
                        </form>
                    </div>
                </div>
                <div class="clr"></div>
            </div>
        </div>
        <div class="header_strip">
            <div class="strip_heading">
                <h1>@ViewBag.Constituency</h1>
            </div>
        </div>
    </header>
    <div>
        @RenderBody()
    </div>
    <footer>
        <div class="footer">
            <div class="inner">
                <div class="inner_left">About us  |  Contact us  |  Terms &amp; Conditions  |  Privacy Policy</div>
                <div class="inner_right">Copyright &copy; @DateTime.Now.Year Election 2014</div>
            </div>
        </div>
    </footer>
</body>
</html>
